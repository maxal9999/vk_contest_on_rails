<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Purse</th>
      <th>Status</th>
      <th>Descr</th>
      <th>Comment txt</th>
      <th>Create date</th>
      <th>Start date</th>
      <th>End date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.purse %></td>
        <td><%= order.status %></td>
        <td><%= order.descr %></td>
        <td><%= order.comment_txt %></td>
        <td><%= order.create_date %></td>
        <td><%= order.start_date %></td>
        <td><%= order.end_date %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

